doctype html
html
  include ./head.jade
  body
    nav.navbar.navbar-default.navbar-static-top
      div.container
        div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Resource Center
        div#navbar.navbar-collapse.collapse
          ul.nav.navbar-nav            
            li
              a(href="/projects") Projects
            li
              a(href="/resources/browse") Resource Library
            li
              a(href="/blog") Blog
          if isAuthenticated
            ul.nav.navbar-nav.navbar-right
              li
                a(href="/user/me") My Account
              li
                a(href="../navbar/") Help
          else
            form#loginForm.navbar-form.navbar-right(method="post", action="/login")
              div.form-group
                input.form-control(name="username", type="text", placeholder="Username")
              div.form-group
                input.form-control(name="password", type="password", placeholder="Password")
              button.btn.btn-success.btn-login Sign in        
